# ======================================
# SISTEMA DE ACADEMIA - VARIÁVEIS DE AMBIENTE
# ======================================
# Copie este arquivo para .env e preencha com seus valores

# ======================================
# DATABASE
# ======================================
DATABASE_URL=mysql://usuario:senha@localhost:3306/academia_db

# ======================================
# AUTHENTICATION (Manus OAuth - Injetado Automaticamente)
# ======================================
JWT_SECRET=seu-secret-jwt-aqui
OAUTH_SERVER_URL=https://api.manus.im
VITE_OAUTH_PORTAL_URL=https://portal.manus.im

# ======================================
# MANUS APP (Injetado Automaticamente)
# ======================================
VITE_APP_ID=seu-app-id
VITE_APP_TITLE=Sistema de Academia
VITE_APP_LOGO=/logo.png

# ======================================
# OWNER (Injetado Automaticamente)
# ======================================
OWNER_OPEN_ID=owner-id
OWNER_NAME=Nome do Proprietário

# ======================================
# MANUS BUILT-IN APIs (Injetado Automaticamente)
# ======================================
BUILT_IN_FORGE_API_URL=https://forge.manus.im
BUILT_IN_FORGE_API_KEY=sua-api-key
VITE_FRONTEND_FORGE_API_URL=https://forge.manus.im
VITE_FRONTEND_FORGE_API_KEY=frontend-api-key

# ======================================
# ANALYTICS (Injetado Automaticamente)
# ======================================
VITE_ANALYTICS_ENDPOINT=https://analytics.manus.im
VITE_ANALYTICS_WEBSITE_ID=seu-website-id

# ======================================
# EFÍ PAY (PIX) - VOCÊ DEVE CONFIGURAR
# ======================================
EFI_CLIENT_ID=seu-client-id-efi
EFI_CLIENT_SECRET=seu-client-secret-efi
EFI_PIX_KEY=sua-chave-pix@email.com
EFI_CERTIFICATE_PATH=./certificado-efi.p12
EFI_SANDBOX=true  # true para homologação, false para produção

# ======================================
# EMAIL (SMTP) - VOCÊ DEVE CONFIGURAR
# ======================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false  # true para porta 465, false para 587
SMTP_USER=seu-email@gmail.com
SMTP_PASSWORD=sua-senha-app-gmail
SMTP_FROM_NAME=Academia Sistema
SMTP_FROM_EMAIL=noreply@academia.com

# ======================================
# CONTROL ID (OPCIONAL)
# ======================================
# Configurados pela interface web em /admin/control-id-devices
# Cada dispositivo tem IP, porta, usuário e senha próprios

# ======================================
# SERVIDOR
# ======================================
PORT=3000
NODE_ENV=development  # development ou production
