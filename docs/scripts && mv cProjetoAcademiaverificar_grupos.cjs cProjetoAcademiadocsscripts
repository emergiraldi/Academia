const axios = require('axios');

const baseUrl = 'http://192.168.2.142:80';

async function desbloquearEmerson() {
  try {
    console.log('üîì Desbloqueando acesso do Emerson...\n');

    // Login
    const login = await axios.post(
      `${baseUrl}/login.fcgi`,
      { login: 'admin', password: 'admin' },
      { headers: { 'Content-Type': 'application/json' }, timeout: 10000 }
    );
    const session = login.data.session;

    // Adicionar Emerson (user_id 1) ao grupo 1
    const response = await axios.post(
      `${baseUrl}/create_objects.fcgi?session=${session}`,
      {
        object: "user_groups",
        values: [
          {
            user_id: 1,
            group_id: 1
          }
        ]
      },
      { headers: { 'Content-Type': 'application/json' }, timeout: 10000 }
    );

    console.log('‚úÖ Emerson adicionado ao grupo "Padr√£o"');
    console.log('   Response:', response.status, response.data);
    console.log('\nüéØ Agora passe na leitora facial novamente!');
    console.log('   O acesso deve ser liberado e o log ser√° registrado.\n');

  } catch (error) {
    console.error('‚ùå Erro:', error.message);
    if (error.response) {
      console.error('   Status:', error.response.status);
      console.error('   Detalhes:', error.response.data);
    }
  }
}

desbloquearEmerson();
